<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#BBDEFB"
    android:elevation="10dp"
    app:cardUseCompatPadding="true"
    app:cardMaxElevation="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">
        
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/receipt"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textStyle="normal"
                android:fontFamily="sans-serif-condensed"
                android:text="Order Summary"
                android:textSize="25dp"
                android:textColor="@android:color/primary_text_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


            <LinearLayout
                android:id="@+id/pass_info"
                android:layout_below="@id/order_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:id="@+id/pass_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                    <TextView
                        android:text="Pass type"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/passtype"
                            android:text="oneday_pass"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@android:color/primary_text_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/purchase_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:gravity="center"
                    >
                    <TextView
                        android:text="Purchase date"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/purchasedate"
                        android:text="20/6/2016"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/expiry_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:gravity="center"
                    >
                    <TextView
                        android:text="Expiry date"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/expirydate"
                        android:text="20/7/2016"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/address_layout"
                android:layout_below="@id/pass_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                >
                <ImageView
                    android:src="@drawable/vector_drawable_ic_location_on_white___px"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20dp"
                    android:textColor="@android:color/primary_text_light"
                    android:text="Workout Location :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/address_layout"
                android:id="@+id/adress_merchant_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">
                <TextView
                    android:id="@+id/adress_merchant"
                    android:textColor="@android:color/primary_text_light"
                    android:text="Gold's gym,Near Anna beasent,\nKoramangala 5th Block,\nBangalore,KA-58"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <LinearLayout
                android:layout_below="@id/adress_merchant_layout"
                android:id="@+id/price_bootom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount to be paid :"/>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        android:text="\u20B9\t"
                        android:textSize="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_orange_light"/>
                    <TextView
                        android:id="@+id/passprice"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        android:text="300"
                        android:textSize="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_orange_light"/>

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:id="@+id/couponlayout"
                android:layout_below="@id/price_bootom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                 <android.support.design.widget.TextInputEditText
                     android:padding="10dp"
                     android:textSize="15dp"
                     android:background="@drawable/rectangle"
                     android:textColor="@android:color/primary_text_dark"
                     android:hint="Enter Coupon Code "
                     android:fontFamily="sans-serif-condensed"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />

                <Button
                    android:textSize="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="#fff"
                    android:layout_marginLeft="10dp"
                    android:text="Apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/couponlayout"
                android:id="@+id/couponmessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:visibility="gone"
                    android:textColor="@android:color/primary_text_dark"
                    android:gravity="center"
                    android:text="Your coupon has been applied"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/pay"
                android:text="Check out"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/primary_text_dark"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/couponmessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />







        </RelativeLayout>

    </android.support.v7.widget.CardView>





